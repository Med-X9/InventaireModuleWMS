server {
    listen 80;
    server_name 31.97.158.68;
    
    # Redirection HTTPS (décommenter en production avec SSL)
    # return 301 https://$server_name$request_uri;

    # Taille maximale des uploads
    client_max_body_size 100M;

    # Routes Django - Proxy vers Gunicorn
    # Ordre important : routes spécifiques avant routes générales

    # API Web (Inventory)
    location /web/api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_read_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # API Mobile
    location /mobile/api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_read_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # API Masterdata
    location /masterdata/api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_read_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # API Auth
    location /api/auth/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_read_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # Documentation API (Swagger/ReDoc)
    location ~ ^/(swagger|redoc|swagger\.json) {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # Changement de langue
    location /set_language/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # Admin Django
    location /admin/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    # Fichiers statiques Django (DOIT être avant les autres locations)
    location /static/ {
        alias /home/ubuntu/IMS/backend/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
        # Vérifier que le fichier existe, sinon 404
        try_files $uri =404;
    }

    # Fichiers media Django
    location /media/ {
        alias /home/ubuntu/IMS/backend/media/;
        expires 7d;
        add_header Cache-Control "public";
        access_log off;
        # Vérifier que le fichier existe, sinon 404
        try_files $uri =404;
    }

    # Frontend Vue.js - Assets statiques (JS, CSS, images, fonts)
    # IMPORTANT: Cette regex ne doit PAS intercepter /static/ ou /media/
    location ~* ^/(?!static|media).*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        root /home/ubuntu/IMS/frontend/dist;
        expires 30d;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # Frontend Vue.js - Index et routing
    location / {
        root /home/ubuntu/IMS/frontend/dist;
        try_files $uri $uri/ /index.html;
        index index.html;
        
        # Headers pour le frontend
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Logs
    access_log /var/log/nginx/inventaire-access.log;
    error_log /var/log/nginx/inventaire-error.log;
}

# Configuration HTTPS (décommenter et configurer en production)
